<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorPrimary">@color/whiter</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@drawable/mydialog</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/whiter</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppCompatAlertDialogStyle"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/barChatOrange</item>
        <item name="android:textColorPrimary">@color/whiter</item>
        <item name="android:gravity">center</item>
        <item name="android:windowBackground">@drawable/mydialog</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:textColor">@color/redLineColor</item>
    </style>

</resources>
